<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="423.0" prefWidth="976.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dk.easv.ticketapptest.GUI.Controllers.CreateTicketViewController">
   <children>
      <Label layoutX="10.0" layoutY="10.0" prefHeight="28.0" prefWidth="131.0" text="Ticket Types">
         <font>
            <Font name="System Bold" size="20.0" />
         </font>
      </Label>
      <HBox layoutX="10.0" layoutY="335.0" prefHeight="82.0" prefWidth="966.0" spacing="130.0" />
      <VBox layoutX="10.0" layoutY="49.0" prefHeight="376.0" prefWidth="926.0" spacing="15.0">
         <children>
            <Label prefHeight="20.0" prefWidth="444.0" text="Ticket Name">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <TextField fx:id="txtTicketName" prefHeight="42.0" prefWidth="952.0" promptText="e.g., Early Bird, VIP, General Admission" />
            <Label prefHeight="20.0" prefWidth="444.0" text="Ticket Description">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <TextArea fx:id="txtTicketDesc" prefHeight="96.0" prefWidth="954.0" promptText="Describe what's included with this ticket type">
               <font>
                  <Font size="16.0" />
               </font>
            </TextArea>
            <Label prefHeight="20.0" prefWidth="412.0" text="Price">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <TextField fx:id="txtTicketPrice" prefHeight="42.0" prefWidth="412.0" promptText="0.00">
               <font>
                  <Font size="16.0" />
               </font>
            </TextField>
            <Button fx:id="btnCreateTicket" mnemonicParsing="false" onAction="#handleCreateTicket" prefHeight="36.0" prefWidth="160.0" text="Create Ticket">
               <font>
                  <Font size="16.0" />
               </font>
            </Button>
         </children>
      </VBox>
   </children>
</AnchorPane>
